	IS_RUNNING=$(docker ps  | grep tm-rabbitmq | wc -l)

	if [ "${IS_RUNNING}" -eq "0" ]; then
	docker run -d --rm --hostname rabbitmq --name tm-rabbitmq -p 15672:15672 -p 5672:5672 rabbitmq:3-management
	sleep 5
	else
	echo "rabbitmq already running"
	fi
}

